<h1>The Best Players</h1>
<table class="table table-bordered table-striped">
  <tr>
    <th>Total Points</th>
    <th>Name</th>
    <th>Username</th>
    <th>Email</th>
  </tr>
  <% @users.each do |user| %>
    <%= render 'user_row', :user => user %>
  <% end %>
</table>

<nav aria-label="Page navigation">

    <ul class="pagination">
      <%page_count = @current_page%>
        <% unless @previous_page == 0 %>
          <li><a href="/?number=<%=@previous_page%> ">Prev</a></li>
        <%end%>
          <%while page_count < @next_5_page %>
            <%unless page_count == @maximum_page %>
              <%if page_count == @current_page %>
                <li class="active" id="current_page"><a href="#current_page"><%=page_count%><span class="sr-only">(current)</span></a></li>
               <%page_count += 1%>
              <%else%>
                <li><a href="/?number=<%=page_count%>"><%=page_count%></a></li>
                <%page_count += 1%>
              <%end%>
            <%end%>

          <%end%>
      <% if @current_page == @maximum_page %>
      <%else%>
        <li><a href="/?number=<%=@next_5_page%>">Next</a></li>
      <%end%>

    </ul>

</nav>


